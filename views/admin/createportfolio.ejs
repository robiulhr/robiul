<!--================ admin header Area =================-->

<%- include('../partials/admin/adminheader')%>

    <!--================ end admin header Area =================-->
    <!--================ admin nav Area =================-->

    <%- include('../partials/admin/adminnav')%>

        <!--================ end admin nav Area =================-->
        <!--================ admin aside Area =================-->

        <%- include('../partials/admin/adminaside')%>

            <!--================ end admin aside Area =================-->
            <!-- main -->
            <main id="main" class="main">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= locals.title%>
                        </h5>

                        <!-- General Form Elements -->
                        <form action="/admin/createportfolio" method="post" enctype="multipart/form-data">
                            <!-- ================ multer error ================= -->
                            <%if (locals.multerError ) { %>
                                <div class="mb-3 alert alert-danger">
                                    <%= locals.multerError%>
                                </div>
                                <% } %>
                                    <!-- ================ multer error end ================= -->

                                    <!-- ================ database syntex error ================= -->
                                    <%if (locals.databaseError ) { %>
                                        <%if (locals.databaseError.errors ) { %>
                                            <div class="mb-3 alert alert-danger">
                                                <%if ( locals.databaseError.errors.hasOwnProperty('portfolioTitle')) {
                                                    %>

                                                    <%=`${locals.databaseError.errors.portfolioTitle}`%>
                                                        </br>
                                                        <% } %>

                                                            <%if (
                                                                locals.databaseError.errors.hasOwnProperty('inputTextarea'))
                                                                { %>

                                                                <%=`${locals.databaseError.errors.inputTextarea}`%>
                                                                    <% } %>
                                            </div>
                                            <% } %>


                                                <% } %>
                                                    <!-- ================ database  error end  ================= -->

                                                    <div class="row mb-3">
                                                        <label for="inputText"
                                                            class="col-sm-2 col-form-label">Title</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" id="inputText" class="form-control <%if (locals.databaseError) { %><%-  locals.databaseError.errors.hasOwnProperty('portfolioTitle') ? 'is-invalid' : ''  %>  
                       <% } %>" name="portfolioTitle" value="<%-locals.databaseError || locals.multerError ? `${locals.value.portfolioTitle}` : '' %>">
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <label for="formFile" class="col-sm-2 col-form-label">Thumnail
                                                            image</label>
                                                        <div class="col-sm-10">
                                                            <input
                                                                class="form-control <%-(locals.multerError)? 'is-invalid': '' %>"
                                                                type="file" id="formFile" name="portfolioimage">
                                                        </div>
                                                    </div>

                                                    <div class="row mb-3">
                                                        <label for="inputTextarea" class="col-sm-2 col-form-label">Short
                                                            description</label>
                                                        <div class="col-sm-10">
                                                            <textarea class="form-control <%if (locals.databaseError) { %><%-  locals.databaseError.errors.hasOwnProperty('inputTextarea') ? 'is-invalid' : ''  %>  
                       <% } %>" style="height: 100px" id="inputTextarea"
                                                                name="portfoliodes"><%-locals.databaseError || locals.multerError ? `${locals.value.portfoliodes}` : '' %></textarea>
                                                        </div>
                                                    </div>

                                                    <div class="row mb-3">
                                                        <legend class="col-form-label col-sm-2 pt-0">Catagories
                                                        </legend>
                                                        <div class="col-sm-10">

                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="gridCheck1" name="catagory" value="exm-1">

                                                                <label class="form-check-label" for="gridCheck1">
                                                                    Example checkbox
                                                                </label>
                                                            </div>

                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="gridCheck2" name="catagory" value="exm-2">
                                                                <label class=" form-check-label" for="gridCheck2">
                                                                    Example checkbox 2
                                                                </label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="gridCheck3" name="catagory" value="exm-3">
                                                                <label class=" form-check-label" for="gridCheck3">
                                                                    Example checkbox 2
                                                                </label>
                                                            </div>

                                                        </div>
                                                    </div>

                                                    <div class="row mb-3">
                                                        <label class="col-sm-2 col-form-label">Submit
                                                            Button</label>
                                                        <div class="col-sm-10">
                                                            <button type="submit" class="btn btn-primary">Submit
                                                                Form</button>
                                                        </div>
                                                    </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>



            </main>


            <!-- End #main -->

            <!--================ admin footer Area =================-->

            <%- include('../partials/admin/adminfooter')%>
                <!--================ end admin footer Area =================-->